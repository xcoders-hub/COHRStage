<!DOCTYPE html>
@if (ViewBag.LoggedIn == "yes"){
    @:<html id="logged-in">
}else{
    @:<html>
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coherent Document Management Portal</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.15/datatables.min.css" />

    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <meta name="description" content="The description of my page" />
</head>
<body>
    @if (ViewBag.LoggedIn == "yes")
    {
        <div class="navbar-top"></div>

        <div class="navbar">
            <div>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Add Document", "Add", "Document", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("View Documents", "All", "Document", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("App Codes", "GetAllAppCodes", "Document", new { area = "" }, new { @class = "navbar-brand"})
                    @Html.ActionLink("Demo - Leads", "ListDocs", "Leads", new { area = "" }, new { @class = "navbar-brand", target = "_blank" })
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav"></ul>
                </div>
            </div>
        </div>

            <div class="active-user">
                <div class="user-name">@Session["username"]</div>
                @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "logout-btn" })
            </div>

            <div class="bread-crumb">
                <ul>
                    <li>Coherent</li>
                    <li>DMP</li>
                </ul>

                <div class="clear-left"></div>
            </div>
    }
    <div>
        @RenderBody()
        <footer></footer>
    </div>

    <script>
        $(".logout-btn, #nav_logout").click(function () {
            window.close();
        });
    </script>
</body>
</html>
