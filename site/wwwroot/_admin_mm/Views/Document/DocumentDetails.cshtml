
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-wrapper">
    <div class="contents">
        <div class="heading">
            <h2>Document Details: @ViewData["Title"]</h2>
        </div>

        <div class="page-contents">
            <div>
                <div class="group">
                    <div class="form-row">
                        <div class="form-col-label"><label>Title</label></div>
                        <div class="form-col-input"><label>@ViewData["Title"]</label></div>
                    </div>
                    <div class="form-row">
                        <div class="form-col-label"><label>Description</label></div>
                        <div class="form-col-input"><label>@ViewData["Description"]</label></div>
                    </div>
                    <div class="form-row">
                        <div class="form-col-label"><label>Category</label></div>
                        <div class="form-col-input"><label>@ViewData["Category"]</label></div>
                    </div>

                    <div class="form-row">
                        <div class="form-col-label"><label>SalesForce ID</label></div>
                        <div class="form-col-input"><label>@ViewData["SalesForceId"]</label></div>
                    </div>

                    <div class="form-row">
                        <div class="form-col-label"><label>Alternate Tracking ID</label></div>
                        <div class="form-col-input"><label>@ViewData["AlternateTrackingId"]</label></div>
                    </div>                  
                  
                    <div class="form-row">
                        <div class="form-col-label"><label>App Code</label></div>
                        <div class="form-col-input"><label>@ViewData["AppCode"]</label></div>
                    </div>

                    <div class="form-row">
                        <div class="form-col-label"><label>Product Group</label></div>
                        <div class="form-col-input"><label>@ViewData["ProductGroup"]</label></div>
                    </div>

                    <div class="form-row">
                        <div class="form-col-label"><label>Link to File</label></div>
                        <div class="form-col-input"><label>@ViewData["EndpointURL"]</label></div>
                    </div>

                    <div class="form-row">
                        <div class="form-col-label"><label>Last Modified</label></div>
                        <div class="form-col-input"><label>@ViewData["ModifiedDateTime"]</label></div>
                    </div>

                    <div class="form-row">
                        <div class="form-col-label"><label>Created</label></div>
                        <div class="form-col-input"><label>@ViewData["CreatedDateTime"]</label></div>
                    </div>

                    <div class="form-row">
                        <div class="form-col-label"><label>Action</label></div>
                        <div class="form-col-input">
                            <label>
                                <a href="/Document/Edit/@ViewData["DocId"]" title="Edit"><img src="/Content/themes/base/images/icon-edit.png" alt="Edit"></a>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="###" class="delete_doc" rel="@ViewData["DocId"]" title="Delete"><img src="/Content/themes/base/images/icon-delete.png" alt="Delete"></a>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="/Document/UploadNew/@ViewData["DocId"]" title="Upload New Revision"><img src="/Content/themes/base/images/icon-upload-file.png" alt="Upload New Revision"></a>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $(".delete_doc").click(function () {
            console.log( $(this).attr("rel") );
            if (confirm("Are you sure you want to delete this document?")) {
                $.post("/Document/DeleteDocument/", { id: $(this).attr("rel") },
                    function (data) {
                        if (data.success == true) {
                            window.location.href = "/Document/";
                        }
                    });
            }
        });
    });

</script>

